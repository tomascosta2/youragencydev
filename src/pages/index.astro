		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	.secondary-text-gradient {
		background: linear-gradient(238deg, #FF7448 7.85%, #ff4848 91.08%);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	.terciary-text-gradient {
		background: linear-gradient(58deg, #b94cdb, #fe815e);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 180%;
		background-position: left bottom;
		animation: gradiantAnimation 4s infinite alternate;
	}
	@keyframes gradiantAnimation {
		to {
			background-position: right top;
		}
	}
	.hide-scroll {
		-ms-overflow-style: none;  /* Internet Explorer 10+ */
		scrollbar-width: none;  /* Firefox */
	}
	.hide-scroll::-webkit-scrollbar { 
		display: none;  /* Safari and Chrome */
	}
	.tcp-btn {
		@apply block w-fit bg-[#222] px-[24px] py-[8px] text-[#F5F5F5] rounded-[10px] font-semibold border-[3px] border-[#222] hover:border-[#6248ff] transition-all duration-[.2s] hover:cursor-pointer lg:text-[16px];
	}
	.tcp-btn.--secondary {
		@apply bg-gray-200 text-[#222] border-transparent hover:border-[#6248ff];
	}

	/* Cursor follower */
	#follower {
		width: 30px;
		height: 30px;
		background-color: #FFFFFF;
		border-radius: 50%;
		position: absolute;
		pointer-events: none;
		transition: transform 0.1s ease;
		filter: blur(60px);
	}

	/* Hero */
	.hero-development {
		opacity: 1;
		transition: opacity 0.2s linear;
	}
	.developments-list:hover .hero-development {
		opacity: .3;
	}
	.hero-development:hover {
		opacity: 100 !important;
	}

	/* Nosotros */
	.card-bg {
		background: linear-gradient(135deg, rgba(250, 250, 250, .22), rgba(223, 239, 254, .08), rgba(250, 250, 250, .22));
		background-size: 150%;
		transition: all .2s linear;
	}
	.card:hover .card-bg {
		background-position: 100% 50%;
	}
	.cross-out {
		position: relative;
		transition: opacity .45s linear;
		transition-delay: .8s;
	}
	.cross-out::before {
		content: '';
		position: absolute;
		top: calc(50% - 2px);
		left: -2px;
		height: 4px;
		width: 0;
		background-color: #F5F5F5;
		transition: all .4s ease-in;
		transition-delay: .8s;
		border-radius: 10px;
	}
	.card .cross-out.--animated::before {
		width: calc(100% + 4px);
	}
	.card .cross-out.--animated {
		opacity: 50%;		
	}
	.clean-code {
		background-color: #202425;
    	background-image: linear-gradient(180deg, #3549fc00, #7f8cff0d);
	}
	.proyects-time {
		position: absolute;
		padding: 30px;
		width: 90%;
		left: 5%;
		bottom: -1px;

		display: flex;
		flex-direction: column;
		justify-content: center;
		flex: 1;
		background-image: radial-gradient(circle farthest-side at 50% 100%, rgba(91, 136, 204, .2), rgba(91, 136, 204, 0));
	}
	.proyects-time::before {
		content: '';
		position: absolute;
		left: 0;
		top: 2px;
		right: 0;
		bottom: auto;
		width: 100%;
		height: 1px;
		background-image: linear-gradient(90deg, hsla(0, 0%, 100%, 0), hsla(0, 0%, 100%, .1) 50%, hsla(0, 0%, 100%, 0));
	}
	.proyects-time-appear.--animated {
		@apply opacity-100 mb-[15px];
	}

</style>

<script>window.onload=()=>{const e=document.querySelectorAll(".tcp-accordion-item");let t=null;e.forEach((e=>{e.addEventListener("click",(()=>{t&&t!==e&&(t.querySelector(".tcp-accordion-item-content").classList.add("max-h-0"),t.querySelector(".tcp-accordion-item-content").classList.remove("max-h-[500px]"),t.querySelector("svg").classList.toggle("rotate-[45deg]")),e.querySelector("svg").classList.toggle("rotate-[45deg]");const c=e.querySelector(".tcp-accordion-item-content");c.classList.toggle("max-h-0"),c.classList.toggle("max-h-[500px]"),t=c.classList.contains("max-h-0")?null:e}))}));const c=document.querySelectorAll(".--animate"),o=new IntersectionObserver(((e,t)=>{e.forEach((e=>{e.isIntersecting?e.target.classList.add("--animated"):e.target.classList.remove("--animated")}))}),{threshold:.1});c.forEach((e=>{o.observe(e)}))};</script>
<script>
	const contactScreen = document.getElementById('contactScreen');
	const openContactButtons = document.querySelectorAll('#openContact');
	const closeContact = document.getElementById('closeContact');

	openContactButtons.forEach((openContactButton) => {
		openContactButton.addEventListener('click', () => {
			contactScreen.classList.remove('hidden');
		})
	})
	closeContact.addEventListener('click', () => {
		contactScreen.classList.add('hidden');
	})

	// Cursor follower
	const sections = document.querySelectorAll('.have-mouse-follower');

	sections.forEach((section) => {

		const follower = section.querySelector('#follower') as HTMLElement;
		
		section.addEventListener('mousemove', (event: MouseEvent) => {
			const rect = section.getBoundingClientRect();
			const x = event.clientX - rect.left;
			const y = event.clientY - rect.top - 60;

			follower.style.transform = `translate(${x}px, ${y}px)`;
		});
		
	})
</script>